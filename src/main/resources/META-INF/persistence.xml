<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="labjpa" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>pe.edu.cibertec.dominio.Usuario</class>
        <class>pe.edu.cibertec.dominio.Categoria</class>
        <class>pe.edu.cibertec.dominio.Producto</class>
        <class>pe.edu.cibertec.dominio.Carrito</class>
        <class>pe.edu.cibertec.dominio.Departamento</class>
        <class>pe.edu.cibertec.dominio.DetalleCarrito</class>
        <class>pe.edu.cibertec.dominio.Direccion</class>
        <class>pe.edu.cibertec.dominio.Marca</class>
        <class>pe.edu.cibertec.dominio.Provincia</class>
        <class>pe.edu.cibertec.dominio.TipoDireccion</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tienda?zeroDateTimeBehavior=convertToNull"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="mysql"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>